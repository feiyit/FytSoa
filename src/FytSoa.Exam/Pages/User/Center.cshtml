@page
@{
    Layout = "Shared/_LayoutCenter";
    ViewData["CenterNav"] = 1;
}
<div class="uk-card-default rounded">
    <div class="p-3">
        <h5 class="mb-0"> 基本信息 </h5>
    </div>
    <hr class="m-0">
    <form class="uk-child-width-1-2@s uk-grid-small p-4" uk-grid>
        <div>
            <h5 class="mb-2"> 用户名 </h5>
            <input type="text" class="uk-input uk-form-blank" placeholder="Your name">
        </div>
        <div>
            <h5 class="mb-2"> 性别 </h5>
            <input type="text" class="uk-input uk-form-blank" placeholder="Your seccond">
        </div>
        <div>
            <h5 class="mb-2"> 姓名 </h5>
            <input type="text" class="uk-input uk-form-blank" placeholder="eliedaniels@gmail.com">
        </div>
        <div>
            <h5 class="mb-2"> 出生日期 </h5>
            <input type="text" class="uk-input uk-form-blank" placeholder="+1 555 623 568 ">
        </div>
    </form>
</div>

<div class="uk-card-default rounded mt-4">
    <div class="p-3">
        <h5 class="mb-0"> 修改密码 </h5>
    </div>
    <hr class="m-0">
    <form class="uk-child-width-1-2@s uk-grid-small p-4" uk-grid>
        <div>
            <h5 class="mb-2"> 手机号码 </h5>
            <input type="text" class="uk-input uk-form-blank" placeholder="23, Block C2 ">
        </div>
        <div>
            <h5 class="mb-2"> 邮箱 </h5>
            <input type="text" class="uk-input uk-form-blank" placeholder="Street Number">
        </div>
    </form>
</div>